@model IEnumerable<File.Models.FileModel>
@{
    ViewData["Title"] = "Список файлов";
}

@{
    foreach (var i in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">

            <div class="thumbnail">
                <div class="caption">
                    <h3>
                        <a>@i.Name</a>
                    </h3>
                    <h3>
                        <a>@i.ShortDescription</a>
                    </h3>
                </div>
            </div>
        </div>
    }
}